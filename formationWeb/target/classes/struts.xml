<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<constant name="struts.devMode" value="true" />

	<package name="formations" namespace="/"
		extends="struts-default">
		<action name="formations" class="formationAction">
			<result>pages/formations.jsp</result>
		</action>
		
		<action name="supprimerFormation" class="formationAction" method="supprimerFormation">
			<result>pages/formations.jsp</result>
		</action>
		
		<action name="enregistrerFormation" class="formationAction" method="enregistrerFormation">
			<result>pages/formations.jsp</result>
		</action>
		
		<action name="modifierFormation" class="formationAction" method="modifierFormation">
			<result>pages/formations.jsp</result>
		</action>
	</package>

</struts>